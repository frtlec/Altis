
@{
    ViewBag.Title = "Hizmetlerimiz";
}
@model List<Altis.Models.Hizmetlerimiz>

<section id="hizmet">


    <div class="center wow fadeInDown">
        <h2>Hizmetlerimiz</h2>
        <p class="lead">Altis uzman ekibi olarak, anne karnından yaşam sonuna kadar geçen süreç boyunca ihtiyaç durumlarında yanınızdayız.</p>
    </div>

    <div class="row">


        @foreach (var item in Model)
        {

            <div class="col-md-6 col-sm-6 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="600ms">
                <div class="feature-wrap">
                    <i class="fa fa-comments"></i>
                    <h2>@item.Baslik</h2>
                    <h3><a href="/Hizmetlerimiz/Hizmet/@item.HizmetlerimizID">İncelemek için tıklayınız.</a></h3>
                </div>
            </div><!--/.col-md-4-->

        }
    </div><!--/.row-->
    <br/>
    <br />
    <br />
    <br />
</section>



@section  scripts{
    <script>
        $(document).ready(function () {
            console.log("ready!");
            $("#Hizmetlerimiz").attr("class", "active");
        });
    </script>


}