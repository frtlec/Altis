
@{
    ViewBag.Title = "Foto";
    Layout = "~/Views/Shared/_blogLayout.cshtml";
}

@model List<Altis.Models.Fotograf>

<section id="portfolio">

    <div class="center wow fadeInDown">
        <h2>Fotoğraf Galerisi</h2>
        <p class="lead">Altis İletişim ve Genel Danışmanlık olarak yakın geçmişte katıldığımız ve gerçekleştirdiğimiz bazı etkinlikler...</p>
    </div>

    <ul class="portfolio-filter text-center">


        @Html.Action("FotografKategori", "Blog")

    </ul><!--/#portfolio-filter-->

    <div class="row">
        <div class="portfolio-items">
            @foreach (var item in Model)
            {

                <div class="portfolio-item @item.FotoKategori.FotoClass col-xs-12 col-sm-4 col-md-3">
                    <div class="recent-work-wrap">
                        <img class="img-responsive" src="~/Content/images/portfolio/recent/@item.FotoURLID" alt="">
                        <div class="overlay">
                            <div class="recent-work-inner">
                                <h4><a href="#">@item.FotoBaslik</a></h4>
                                <p>@item.FotoAciklama</p>
                                <a class="preview" href="~/Content/images/portfolio/full/@item.FotoURLID" rel="prettyPhoto"><i class="fa fa-eye"></i>Görseli Büyüt</a>
                            </div>
                        </div>
                    </div>
                </div><!--/.portfolio-item-->

            }
        </div>
    </div>


</section>



